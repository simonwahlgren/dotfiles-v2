# Inspo from https://gist.github.com/tdd/470582
[user]
    email = simon.wahlgren@gmail.com
    name = Simon Wahlgren

[alias]
    fix-conflicts = git diff --name-only --diff-filter=U | uniq  | xargs nvim
    prune-branches = !git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D
    wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads

[push]
    default = simple

[pull]
    rebase = false

[merge]
    tool = vimdiff
    keepBackup = false

[mergetool]
    prompt = true
    keepBackup = false

[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
    ; cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
    prompt = false
    trustExitCode = true

[mergetool "fugitive"]
    cmd = nvim -f -c "Gdiff" "$MERGED"
    prompt = false
    trustExitCode = true

[difftool]
    prompt = false
    # Be able to abort all diffs with `:cq` or `:cquit`
    trustExitCode = true

[diff]
    external = git-icdiff.sh
    # Use better, descriptive initials (c, i, w) instead of a/b.
    mnemonicPrefix = true
    # Show renames/moves as such
    renames = true
    # Display submodule-related information (commit listings)
    submodule = log

[log]
    # Use abbrev SHAs whenever possible/relevant instead of full 40 chars
    abbrevCommit = true
    # Automatically --follow when given a single path
    follow = true

[core]
    editor = nvim
    pager = less
    excludesfile = /home/simon/.gitignore_global

    # Don't consider trailing space change as a cause for merge conflicts
    whitespace = -trailing-space

[init]
    templatedir = ~/.git_template

[status]
    showUntrackedFiles = normal

[rerere]
    enabled = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
